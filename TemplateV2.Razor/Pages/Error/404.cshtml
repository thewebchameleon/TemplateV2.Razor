@page
@model Error404Model
@{
    ViewData.SetMeta("Page not found");
    Layout = "_LayoutEmpty";
}
<style>
    body {
        background: none !important;
        position: absolute;
        width: 100%;
        display: flex;
        align-items: center;
    }
</style>

<div class="container-fluid h-100">

    <div class="text-center">
        <div class="error mx-auto" data-text="404">404</div>
        <p class="lead text-gray-800 mb-5">Page Not Found</p>
        <p class="text-gray-500 mb-0">Could not find anything at @Model.OriginalPath</p>
        <a asp-page="/Index">&larr; Back to Home</a>
    </div>

</div>
<!-- /.container-fluid -->