@page
@model ManagePermissionsModel
@{
    ViewData.SetMeta("Manage Permission");
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">@ViewData["Title"] </h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="panel-controls">
                <a asp-page="/Admin/Permissions/Create" class="btn btn-primary">Create</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataTable" class="table table-striped" style="width: 100%;" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Group Name</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permission in Model.Permissions)
                        {
                            <tr>
                                <td>@permission.Group_Name</td>
                                <td>@permission.Name</td>
                                <td>@permission.Description</td>
                                <td>
                                    <a asp-page="/Admin/Permissions/Edit" asp-route-id="@permission.Id">
                                        <i class="fas fa-edit" data-toggle="tooltip" data-placement="left" title="Edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
@section Scripts  {

    <script type="text/javascript">

        $(document).ready(function () {

            var table = $('#dataTable').DataTable({
                columnDefs: [
                    { orderable: false, targets: -1 },
                    {}
                ]
            });

        });

    </script>

}
